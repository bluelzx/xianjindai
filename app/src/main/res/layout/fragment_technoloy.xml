<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.brioal.bottomtablayout.api.fragment.technoloyFragment">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicator_height="15dp"
        app:indicator_width="15dp"
        app:delay_time="2500"
        app:scroll_time="1000"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_unselected="@drawable/indictor_color_un"
        app:indicator_drawable_selected="@drawable/indictor_color"
        />

</RelativeLayout>
